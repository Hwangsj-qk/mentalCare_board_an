<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/boardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:text="게시글 제목 작성"
        android:fontFamily="@font/inter_semibold"
        android:lineHeight="22sp"
        android:textSize="16sp"
        android:textAppearance="@style/commonStyle"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.52sp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/boardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="게시글 내용을 보여주는 공간입니다. "
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:lineHeight="18sp"
        android:textAppearance="@style/commonStyle"
        android:lineSpacingExtra="2sp"
        android:translationY="-1.23sp"
        android:gravity="top"
        />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        
        <ImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/heartCount"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="2sp"
            android:lineHeight="18sp"
            android:fontFamily="@font/inter_regular"
            android:text="0"
            android:textSize="13sp"
            android:textAppearance="@style/commonStyle"
            android:translationY="-1.23sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:src="@drawable/chat_bubble"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="2sp"
            android:lineHeight="18sp"
            android:textSize="13sp"
            android:text="0"
            android:textAppearance="@style/commonStyle"
            android:translationY="-1.23sp" />

        <TextView
            android:id="@+id/boardTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_marginLeft="10dp"
            android:lineHeight="18sp"
            android:fontFamily="@font/inter_regular"
            android:textSize="13sp"
            android:textAppearance="@style/commonStyle"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.23sp"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/inter_regular"
            android:lineHeight="18sp"
            android:lineSpacingExtra="2sp"
            android:text="글쓴이"
            android:textSize="13sp"
            android:textAppearance="@style/commonStyle"
            android:translationY="-1.23sp" />
        
    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_width="315dp"
        android:layout_height="1dp"
        android:background="@drawable/line"
        />


</LinearLayout>